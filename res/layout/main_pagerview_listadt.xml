<?xml version="1.0" encoding="utf-8"?>
<TableLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content" >

    <TableRow>

        <TextView
            android:id="@+id/tv_stock_name"
            style="@style/style_tv_stocklist"
            android:layout_weight="2"
            android:text="名称" />

        <TextView
            android:id="@+id/tv_stock_currentp"
            style="@style/style_tv_stocklist"
            android:layout_weight="1"
            android:text="当前价" />

        <TextView
            android:id="@+id/tv_stock_startp"
            style="@style/style_tv_stocklist"
            android:layout_weight="1"
            android:text="开盘价" />

        <TextView
            android:id="@+id/tv_stock_minp"
            style="@style/style_tv_stocklist"
            android:layout_weight="1"
            android:text="日最低" />

        <TextView
            android:id="@+id/tv_stock_maxp"
            style="@style/style_tv_stocklist"
            android:layout_weight="1"
            android:text="日最高" />

        <TextView
            android:id="@+id/tv_stock_date"
            style="@style/style_tv_stocklist"
            android:layout_weight="3"
            android:text="日期" />
    </TableRow>

</TableLayout>